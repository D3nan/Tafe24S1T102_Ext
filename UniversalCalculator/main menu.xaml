<Page
    x:Class="Calculator.main_menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<Image Source="imange/abacus.PNG " Width="85" HorizontalAlignment="Right" VerticalAlignment="Top" Margin=" 0,32,10,0"/>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Universal Calaulator" FontFamily="Arial Black" FontSize="24" FontWeight="Bold" />
			<Button x:Name= "math_CalculatorButton"  Width="200" Height="50" Margin="0,10" Content="Math Calculator"/>
			<Button x:Name= "morg_CalculatorButton"  Content="Mortgage Calculator"  Width="200" Height="50" Margin="0,10"/>
			<Button  x:Name= "cur_CalculatorButton" Content="Currency Calculator" Width="200" Height="50" Margin="0,10" Click="cur_CalculatorButton_Click"  />
			<Button x:Name= "exit_CalculatorButton" Content="Exit"  Width="200" Height="50" Margin="0,10" Click="exit_CalculatorButton_Click" />
		</StackPanel>

	</Grid>
</Page>
